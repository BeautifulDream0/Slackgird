{
  extends: ['config:base', 'group:allNonMajor'],
  labels: ['dependencies'],
  ignorePaths: ['**/__tests__/**'],
  dependencyDashboard: false,
  pin: false,
  rangeStrategy: 'bump',
  packageRules: [
    {
      depTypeList: ['peerDependencies'],
      enabled: false,
    },
    {
      packageNames: ['node'],
      allowedVersions: '16.15.0',
    },
    {
      packageNames: ['npm'],
      allowedVersions: '8.5.0',
    },
    {
      // skip any Angular major version updates
      "updateTypes": ["major"],
      "enabled": false
    },
    {
      packageNames: ['zone.js'],
      allowedVersions: '0.13.3'
    }
  ],
  schedule: ['on friday and tuesday'],
  ignoreDeps: [
    // ignore TypeScript since it has to follow Angular recommended version
    'typescript'
  ],
}
