{
  extends: ['config:base', 'group:allNonMajor'],
  labels: ['dependencies'],
  ignorePaths: ['**/__tests__/**'],
  dependencyDashboard: false,
  node: false,
  pin: false,
  rangeStrategy: 'bump',
  packageRules: [
    {
      depTypeList: ['peerDependencies'],
      enabled: false,
    },
    // allow Node14/npm8 until its EOL June 2023
    {
      packageNames: ['node'],
      allowedVersions: '14.17.0',
    },
    {
      packageNames: ['npm'],
      allowedVersions: '6.14.13',
    },
    {
      packageNames: ['rxjs'],
      allowedVersions: '7.5.0',
    }
  ],
  schedule: ['on Thursday'],
  ignoreDeps: [
    // ignore any of the packages related to Angular major versions, since we will update them manually
    '@angular-devkit/build-angular',
    '@angular-eslint/builder',
    '@angular-eslint/eslint-plugin',
    '@angular-eslint/eslint-plugin-template',
    '@angular-eslint/schematics',
    '@angular-eslint/template-parser',
    '@angular/animations',
    '@angular/cli',
    '@angular/common',
    '@angular/compiler',
    '@angular/compiler-cli',
    '@angular/core',
    '@angular/forms',
    '@angular/language-service',
    '@angular/platform-browser',
    '@angular/platform-browser-dynamic',
    '@angular/router',
    '@ng-select/ng-select',
    'ngx-bootstrap',
    'typescript'
  ],
}
